<!DOCTYPE html>
<html>
  <head>
    <title>LibraryManagementSystem</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

  	<% if current_user %>

      <%= current_user.first_name %> <%= current_user.last_name %> <br>
      <%= current_user.get_role.capitalize %>
      <br>
  		<%= link_to "Logout", '/logout' %>
    <% end %>

    <% flash.each do |key, value| %>
      <div class="alert alert-<%= key %>"><%= value %></div>
    <% end %>

    <%= yield %>

    <%= link_to "Libraries" .html_safe, libraries_path %> <br><br>
    <%= link_to "Books" .html_safe, books_path %> <br><br>

  </body>
</html>
