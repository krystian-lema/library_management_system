<!-- app/views/users/change_password.html.erb -->

<div class ="container">

<% if @user.errors.any? %>
  <ul class="alert alert-danger alert-dismissable fade in">
  <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
    <% @user.errors.full_messages.each do |msg| %>
	  <%= msg %><br>
    <% end %>
  </ul>
<% end %>

<div class="col-md-4 col-md-offset-4">
	<div class="panel panel-info">
	  <div class="panel-heading">Zmiana hasła</div>
	  <div class="panel-body">
	  <div class="col-md-8 col-md-offset-2">
	  
		<%= form_for @user, url: '/users/' + @user.id.to_s + '/change_password' do |f| %>
			<p>
				<%= f.label :password %> <br>
				<%= f.password_field(:password, {:class => 'form-control'}) %>
			</p>
			<p>
				<%= f.label :password_confirmation %> <br>
				<%= f.password_field(:password_confirmation, {:class => 'form-control'}) %>
			</p>
			<%= f.submit "Zmień hasło", {:class => 'btn btn-primary'} %>
		<% end %>
		
	  </div>
	  </div>
	  </div>
	</div>
</div>