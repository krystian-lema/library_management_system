<!-- app/views/users/reset_password.html.erb -->

<div class ="container">

<div class="col-md-4 col-md-offset-4">
	<div class="panel panel-info">
	  <div class="panel-heading">Reset hasła</div>
	  <div class="panel-body">
	  <div class="col-md-8 col-md-offset-2">
	  
		<%= form_tag '/reset_password' do %>
			<p>
				<%= label_tag 'Login' %> <br>
				<%= text_field_tag(:username, "", {:class => 'form-control'}) %>
			</p>
			<%= submit_tag "Resetuj hasło", {:class => 'btn btn-primary'} %>
		<% end %>
		
	  </div>
	  </div>
	  </div>
	</div>
</div> 