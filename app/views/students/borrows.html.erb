<!-- app/views/students/borrows.html.erb -->

<h1>Aktualne wypożyczenia:</h1>
<div class="table-responsive"> 
  <table class="table table-striped">

    <thead>
      <tr>
        <th>Nr wypożyczenia</th>
        <th>Książka</th>
        <th>Biblioteka</th>
        <th>Początek wypożyczenia</th>
        <th>Koniec wypożyczenia</th>
        <th>Status</th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @borrows.each do |borrow| %>
      <tr>
      	<td><%= borrow.id %></td>
      	<td><%= borrow.book.title %></td>
      	<td><%= borrow.book.library.name %></td>
        <% if borrow.status == 0 %>
      	<td>-</td>
      	<td>-</td>
        <td>Gotowa do odbioru</td>
        <% else %>
        <td><%= borrow.start_date %></td>
        <td><%= borrow.start_date + borrow.max_borrow_time.months %></td>
      	<td>Odebrana</td>
        <% end %>
      </tr>
      
    <% end %>
    </tbody>
    
  </table>
</div>

