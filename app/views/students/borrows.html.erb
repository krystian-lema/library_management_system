    </thead>

    <tbody>
      <% @archive_borrows.each do |borrow| %>
      <tr>
        <td><%= borrow.id %></td>
        <td><%= borrow.book.title %></td>
        <td><%= borrow.book.library.name %></td>
        <td><%= borrow.start_date %></td>
        <td><%= borrow.end_date %></td>
        <!-- <td>Oddana</td> -->
      </tr>
      
    <% end %>
    </tbody>
    
  </table>
</div>



