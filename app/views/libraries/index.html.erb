<h1>Listing libraries</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Address</th>
    <th>Description</th>
    <th>Action</th>
  </tr>
 
  <% @libraries.each do |lib| %>
    <tr>
      <td><%= lib.name %></td>
      <td><%= lib.address %></td>
      <td><%= lib.description %></td>
      <td><%= link_to 'Edit', edit_library_path(lib) %>
        <%= link_to 'Destroy', lib, method: :delete, data: { confirm: 'Are you sure?' } %>
        <%= link_to 'Details', lib %>
      </td>
    </tr>
  <% end %>
</table>

<br><%= link_to 'Add library', new_library_path %>