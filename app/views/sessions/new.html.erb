<!-- app/views/sessions/new.html.erb -->

<h1>Login</h1>

<%= form_tag '/login' do %>

	<p>
		<%= label_tag :email %> <br>
		<%= text_field_tag(:email) %>
	</p>

	<p>
		<%= label_tag :password %> <br>
		<%= password_field_tag(:password) %>
	</p>

  <%= submit_tag "Submit" %> <br>
  
 	<br><h2>You don't have account yet?</h2>
	<%= link_to 'Signup!', '/signup' %>

<% end %>