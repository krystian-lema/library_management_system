<!-- app/views/sessions/new.html.erb -->

<h1>Sign in</h1>

<%= form_tag '/login' do %>

	<p>
		<%= label_tag :email %> <br>
		<%= text_field_tag(:email) %>
	</p>

	<p>
		<%= label_tag :password %> <br>
		<%= password_field_tag(:password) %>
	</p>

  <%= submit_tag "Sign in" %> <br>
  
	<br><%= link_to 'I want to create an account', '/signup' %>

<% end %>