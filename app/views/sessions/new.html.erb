<!-- app/views/sessions/new.html.erb -->

<h1>Sign in</h1>

<%= form_tag '/login' do %>

	<p>
		<%= label_tag :username %> <br>
		<%= text_field_tag(:username) %>
	</p>

	<p>
		<%= label_tag :password %> <br>
		<%= password_field_tag(:password) %>
	</p>

  <%= submit_tag "Sign in" %> <br>
  
	<br><%= link_to 'Create new user', '/users_creator' %>

<% end %>